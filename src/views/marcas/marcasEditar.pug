extends ../layout/index

block contenido
        h1.text-4xl.my-10.font-extrabold.text-center.-mt-3= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action='/marcas/actualizar')
                    input(type="hidden" name="_csrf" value= csftToken)
                    input(type="hidden" name="marcaId" value= marca ? marca.marcaId : '')
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="id") ID
                        input#id.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="ID", type="text", name="id" value= marca ? marca.marcaId: '' disabled)
                
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Marca
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese la nueva marca a crear" type="text" name="nombre" value= marca ? marca.nombre: '')

                    // Contenedor para los botones
                    div(class="flex space-x-4 mb-4")
                        // Botón de Regresar
                        a(href="/marcas/lista", class="w-1/2 inline-flex items-center justify-center px-4 py-2 border border-gray-300 bg-gray-200 rounded-md text-gray-700 hover:bg-gray-300")
                            i.fas.fa-arrow-left.mr-2
                            | Regresar

                        // Botón de Guardar                         
                        button(type="submit" class="w-1/2 inline-flex items-center justify-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-md")
                            i.fas.fa-save.mr-2
                            | Guardar