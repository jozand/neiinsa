extends ../layout/index

block contenido
        h1.text-4xl.my-10.font-extrabold.text-center= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action='/clientes/buscar')
                    input(type="hidden" name="_csrf" value= csftToken)
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nit") NIT
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="NIT del Cliente", type="text", name="nit" value= datos ? datos.nit: '')

                    // Contenedor para los botones
                    div(class="flex space-x-4 mb-4")
                        // Botón de Regresar
                        a(href="/clientes/clientes", class="w-1/2 inline-flex items-center justify-center px-4 py-2 border border-gray-300 bg-gray-200 rounded-md text-gray-700 hover:bg-gray-300")
                            i.fas.fa-arrow-left.mr-2
                            | Regresar

                        // Botón de Buscar
                        button(type="submit" class="w-1/2 inline-flex items-center justify-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-md")
                            i.fas.fa-search.mr-2
                            | Buscar
                            